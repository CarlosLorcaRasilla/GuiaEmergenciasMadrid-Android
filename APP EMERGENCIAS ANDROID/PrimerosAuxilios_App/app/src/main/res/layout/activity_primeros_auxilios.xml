<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:id="@+id/Layout"
    tools:context="com.clorca.primerosauxilios_app.PrimerosAuxilios.PrimerosAuxilios">

    <Spinner
        android:id="@+id/selectorPA"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="9dp"
        tools:layout_editor_absoluteY="1dp"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:gravity="center"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/Sintomas"
        android:layout_width="357dp"
        android:layout_height="16dp"
        android:layout_weight="1"
        android:text="Sintomas"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="53dp" />

    <ScrollView
        android:id="@+id/scrollSintomas"
        android:layout_width="355dp"
        android:layout_height="123dp"
        android:text="TextView"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="83dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/cuerpoSintomas"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Cuerpo Sintomas"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>


    </ScrollView>

    <TextView
        android:id="@+id/quehacer"
        android:layout_width="357dp"
        android:layout_height="16dp"
        android:layout_weight="1"
        android:text="Que Hacer"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="14dp"
        tools:layout_editor_absoluteY="220dp" />

    <ScrollView
        android:id="@+id/scrollQueHacer"
        android:layout_width="355dp"
        android:layout_height="123dp"
        tools:layout_editor_absoluteX="15dp"
        tools:layout_editor_absoluteY="253dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/cuerpoQuehacer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Cuerpo Que Hacer"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>

    </ScrollView>


    <Button
        android:id="@+id/videoPA"
        android:layout_width="356dp"
        android:layout_height="41dp"
        android:text="Video Informativo"
        tools:layout_editor_absoluteX="14dp"
        tools:layout_editor_absoluteY="458dp"
        android:layout_weight="1"/>
</LinearLayout>
